#! /bin/bash

source ./.sync_settings
command="rsync -av --update --delete --exclude-from=.sync_exclude --include-from=.sync_include --exclude="*" --exclude=".*" -e ssh ${remote_folder}/ ./"

echo "[SYNC DOWN]"
echo "Listing files/folders to be changed ..."
deleted=`$command -n --itemize-changes | grep -v "^sent [0-9]* bytes\|^total size is\|^$\|^receiving incremental" | tee /dev/tty | grep "^*deleting\\s" | sed "s/^\*deleting\\s*//g"`

if [ $deleted ]; then
	echo ""
	echo "===== NOTICE ======"
	echo "You are going to delete the following files."
	echo ${deleted}
	echo "==================="
fi

echo ""
read -p "Are you sure(y/N)?" answer

if [ $answer != 'y' ]; then
	echo "Aborting ..."
	exit 1 
fi

echo ""
echo "Executing rsync ..."
echo ""
echo '-- rsync message --'
$command
echo '-------------------'
echo ""
echo "Done."